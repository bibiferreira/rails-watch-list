
<div class="row top-menu">
  <div class="col-md-9">
    <h2><%= @list.name %></h2>
  </div>
  <div class="col-md-3">
    <%= link_to "Add new Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
  </div>
</div>


<div class="row gx-5 gy-5">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="col-md-4">
    <div class="row">
      <div class="col-md-3">
        <img src="<%= bookmark.movie.poster_url %>" class="movie-thumb">
      </div>
      <div class="col-md-9">
        <div class="row">
          <h4><%= bookmark.movie.title %></h4>
        </div>
        <div class="row">
          <p><%= bookmark.comment %></p>
        </div>
        <div class="row">
          <%= link_to list_bookmark_path(@list, bookmark), data: { confirm: 'Are you sure?' }, method: :delete  do %>
            delete
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
