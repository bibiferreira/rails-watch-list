<h2>Movies</h2>

<div class="row gx-5 gy-5">
  <% @movies.each do |movie| %>
  <div class="col-md-4">
    <div class="row">
      <div class="col-md-3">
        <img src="<%= movie.poster_url %>" class="movie-thumb">
      </div>
      <div class="col-md-9">
        <div class="row">
          <h4><%= movie.title %></h4>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
